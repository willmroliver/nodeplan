<%- include('partials/header') %>

<div class="add-event">

    <h1>New Event</h1>

    <form action="/add-event" method="post" autocomplete="off">

        <div class="add-event-wrapper">

            <input type="text" name="eventName" placeholder="Event Name" id="name-in" required>
            <input type="datetime-local" name="eventDateTime" step="1800" id="datetime-in" required>
            <div class="event-time">
                <input type="range" name="eventLength" min="0" max="8" step="0.5" id="time-in" required>
                <p id="time-in-label"></p>  
            </div>
            <input type="text" name="eventAddress1" placeholder="Address Line 1" id="address1-in" required>
            <input type="text" name="eventPostcode" placeholder="Postcode" id="postcode-in" required>

            <button type="submit" class="btn btn-primary save-btn" value="">Add Event</button>
            
        </div>

    </form>

</div>

<script src="scripts/addevent.js"></script>

<%- include('partials/footer') %>